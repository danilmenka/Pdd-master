<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/butCreateAcc"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Создать аккаунт"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.39" />

    <Button
        android:id="@+id/butEnterAcc"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Войти в аккаунт"
        app:layout_constraintEnd_toEndOf="@+id/butCreateAcc"
        app:layout_constraintStart_toStartOf="@+id/butCreateAcc"
        app:layout_constraintTop_toBottomOf="@+id/butCreateAcc" />

    <Button
        android:id="@+id/butDeleteAcc"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Удалить аккаунт"
        app:layout_constraintEnd_toEndOf="@+id/butEnterAcc"
        app:layout_constraintStart_toStartOf="@+id/butEnterAcc"
        app:layout_constraintTop_toBottomOf="@+id/butEnterAcc" />
</androidx.constraintlayout.widget.ConstraintLayout>