<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/text_diver_one"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Имя" />

            <TextView
                android:id="@+id/text_diver_one1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:paddingRight="40dp"
                android:text="камри" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/text_driver_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Номер удостоверения" />

            <TextView
                android:id="@+id/text_driver_two1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="1220" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/text_driver_four"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent3"
                android:text="Редактировать" />

            <Button
                android:id="@+id/text_driver_four1"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent4"
                android:text="Удалить" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:gravity="center_horizontal">
            <TextView
                android:id="@+id/text_space_driver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" />
        </TableRow>

    </TableLayout>

</LinearLayout>