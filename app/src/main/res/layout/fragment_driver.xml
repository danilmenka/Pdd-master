<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/addDriver"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/hg"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="Имя" />

                <TextView
                    android:id="@+id/idName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:paddingRight="40dp"
                    android:text="Алексей" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/textView14b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Номер удостворения" />

                <TextView
                    android:id="@+id/idRegNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="1111" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal">

                <Button
                    android:id="@+id/buttonEditDriver"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:background="@color/colorAccent3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Редактировать" />

                <Button
                    android:id="@+id/buttonDeleteAuto"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:background="@color/colorAccent4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Удалить" />
            </TableRow>


        </TableLayout>
    </LinearLayout>

    <Button
        android:id="@+id/addDriver"
        style="@style/Widget.AppCompat.Button.Colored"
        android:background="@color/colorAccent3"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:text="Добавить"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.96" />
</androidx.constraintlayout.widget.ConstraintLayout>